version: '3.3'
services:
   db:
     image: mysql:5.7
     volumes:
       - "/home/vagrant/Entregable3/4/db:/var/lib/mysql"
     ports:
       - "3306:3306"
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: 1234
       MYSQL_DATABASE: nextcloud
       MYSQL_USER: root
       MYSQL_PASSWORD: 1234

   
   app:
     image: nextcloud
     volumes:
       - "/home/vagran/Entregable3/4/nextcloud:/var/www/html"
     links:
       - db
     ports:
       - "80:80"
     expose:
       - 80
     restart: always
